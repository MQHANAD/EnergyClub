rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =============================
    // Helpers
    // =============================

    function isAuthenticated() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isAdmin() {
      return isAuthenticated() &&
        (
          userDoc().data.role == "admin" ||
          (
            userDoc().data.preferences != null &&
            userDoc().data.preferences.role == "admin"
          )
        );
    }

    function isEventManager() {
      return isAuthenticated() &&
        userDoc().data.role == "eventManager";
    }

    // =============================
    // PUBLIC READ COLLECTIONS
    // =============================

    match /committees/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /members/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /leadership/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /regions/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // =============================
    // EVENTS
    // =============================

    match /events/{id} {
      allow read: if true;
      allow write: if isAdmin() || isEventManager();
    }

    // =============================
    // APPLICATIONS
    // =============================

    match /applications/{id} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // =============================
    // REGISTRATIONS
    // =============================

    match /registrations/{id} {
      allow read: if true;
      allow create: if true;
      allow update: if isAdmin() || isEventManager();
      allow delete: if isAdmin();
    }

    // =============================
    // USERS
    // =============================

    match /users/{id} {
      allow read: if isAuthenticated() && request.auth.uid == id;
      allow create: if isAuthenticated() && request.auth.uid == id;
      allow update: if isAuthenticated() &&
        (request.auth.uid == id || isAdmin()) &&
        request.resource.data.updatedAt is timestamp;
      allow delete: if isAdmin();
    }

    // =============================
    // ANNOUNCEMENTS
    // =============================

    match /announcements/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // =============================
    // CONFIG
    // =============================

    match /config/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // =============================
    // SETTINGS
    // =============================

    match /settings/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

  }
}