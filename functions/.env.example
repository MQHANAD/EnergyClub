# Firebase Cloud Functions Environment Variables
# Copy this file to .env and fill in your actual values

# SendGrid Configuration
# SENDGRID_API_KEY: Your SendGrid API key. Leave empty in emulator to skip sending.
SENDGRID_API_KEY=

# Google Service Account Configuration (for Google Sheets API)
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
GOOGLE_CLIENT_EMAIL=niversity-club-sheets@university-club-platform.iam.gserviceaccount.com


# Email Configuration
# EMAIL_FROM: The verified sender email used by SendGrid (or functions:config().email.from)
EMAIL_FROM=noreply@EnergyHub.events
# SENDGRID_FALLBACK_FROM: Optional verified backup sender used on 403 errors
SENDGRID_FALLBACK_FROM=
# EMAIL_FROM_NAME: Optional display name for the sender (defaults to "Energy Hub")
EMAIL_FROM_NAME=Energy Hub

# Debug Configuration
DEBUG_ENABLED=false

# Firebase Configuration
FIREBASE_PROJECT_ID=university-club-platform
FIREBASE_REGION=us-central1